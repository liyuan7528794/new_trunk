<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="31dp"
        android:paddingLeft="28dp"
        android:paddingRight="28dp"
        android:paddingTop="31dp"
        android:background="@drawable/circle6_f"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/share_wechat"
            style="@style/share_icon"
            android:drawableTop="@drawable/logo_wechat"
            android:text="微信好友" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"></View>

        <TextView
            android:id="@+id/share_wechatmoments"
            style="@style/share_icon"
            android:drawableTop="@drawable/logo_wechatmoments"
            android:text="微信朋友圈" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"></View>

        <TextView
            android:id="@+id/share_qq"
            style="@style/share_icon"
            android:drawableTop="@drawable/logo_qq"
            android:text="QQ好友" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"></View>

        <TextView
            android:id="@+id/share_qzone"
            style="@style/share_icon"
            android:drawableTop="@drawable/logo_qzone"
            android:text="QQ空间" />
    </LinearLayout>

    <TextView
        android:id="@+id/share_cancel"
        style="@style/text_3_16"
        android:paddingTop="21dp"
        android:layout_marginTop="5dp"
        android:paddingBottom="21dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/circle6_f"
        android:gravity="center"
        android:text="取消" />

</LinearLayout>

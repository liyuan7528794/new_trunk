<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_control_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/circle4_f_1_f0"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_control_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_order_control"/>

        <TextView
            android:id="@+id/tv_control_content"
            style="@style/text_3_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="订单"/>
    </LinearLayout>
</LinearLayout>

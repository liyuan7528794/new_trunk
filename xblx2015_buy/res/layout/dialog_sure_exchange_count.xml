<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/circle12_f"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_redmoney_count"
            style="@style/text_3_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="40dp"
            android:text="fsdfsd" />

        <TextView
            android:id="@+id/tv_money_count"
            style="@style/text_3_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="fsdfsd" />

        <TextView
            android:id="@+id/tv_poundage"
            style="@style/text_3_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="fsdfsd" />

        <TextView
            android:id="@+id/tv_can_exchange"
            style="@style/text_red_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="fsdfsd" />

        <View style="@style/line_9" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_cancle_exchange"
                style="@style/text_3_14"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ripple_drawable_bg"
                android:gravity="center"
                android:text="@string/cancle" />

            <View style="@style/line_point5_m_d8" />

            <TextView
                android:id="@+id/tv_sure_exchange"
                style="@style/text_3_14"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ripple_drawable_bg"
                android:gravity="center"
                android:text="@string/sure" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
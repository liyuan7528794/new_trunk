<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fl_video_layout"
    android:layout_width="150dp"
    tools:background="@android:color/white"
    android:layout_height="150dp">
    <com.travel.layout.ChatImageView
        android:id="@+id/iv_video_backgroud_left"
        android:layout_width="150dp"
        app:chat_image_mask="@drawable/chat_text_left_bg_day"
        android:scaleType="centerCrop"
        android:layout_height="150dp"
        android:visibility="gone"/>
    <com.travel.layout.ChatImageView
        android:id="@+id/iv_video_backgroud_right"
        app:chat_image_mask="@drawable/chat_text_right_bg"
        android:layout_width="150dp"
        android:scaleType="centerCrop"
        android:layout_height="150dp"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/iv_play"
        android:layout_gravity="center"
        android:visibility="visible"
        android:src="@drawable/detail_icon_play_white"
        android:layout_width="30dp"
        android:layout_height="30dp" />
    <RelativeLayout
        android:id="@+id/fl_video_view_container"
        android:layout_gravity="center"
        android:visibility="invisible"
        android:background="@android:color/holo_purple"
        android:layout_width="150dp"
        android:layout_height="200dp"/>
</FrameLayout>
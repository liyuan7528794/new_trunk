<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="@color/white">

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="7dp"
        android:background="@drawable/nav_icon_arrow_day"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="43.5dp"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/tab_info"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="30dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_info"
                style="@style/text_3_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="辩论详情"/>

            <View
                android:id="@+id/infoLine"
                android:layout_width="18dp"
                android:layout_height="3dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/circle8_333"/>
            <!--<View
                android:id="@+id/infoLine"
                android:layout_width="11dp"
                android:layout_height="3dp"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/tv_info"
                android:layout_alignRight="@+id/tv_info"
                android:background="@color/black_3"/>-->
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tab_comment"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_comment"
                style="@style/text_3_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="精彩评论"/>

            <View
                android:id="@+id/commentLine"
                android:layout_width="18dp"
                android:layout_height="3dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/circle8_333"
                android:visibility="invisible"/>
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/shareButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/nav_icon_share"
        android:visibility="gone"/>

    <View
        style="@style/line_D8"
        android:layout_marginTop="43.5dp"/>
</RelativeLayout>
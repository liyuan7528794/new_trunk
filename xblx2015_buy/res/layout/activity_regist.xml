<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/parentLayout"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <ImageView
        android:layout_width="91dp"
        android:layout_height="91dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="35dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/ic_launcher"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_city"
                style="@style/text_3_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="国家/地区"/>

            <TextView
                android:id="@+id/tv_china"
                style="@style/text_3_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:text="中国"/>
        </RelativeLayout>

        <View
            style="@style/line_D8"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/textView3"
                style="@style/text_3_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="手机号"/>

            <EditText
                android:id="@+id/telephone_edit"
                style="@style/edit_c0_title_color_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:ems="10"
                android:hint="请输入手机号"
                android:inputType="phone"/>
        </LinearLayout>

        <View style="@style/line_D8"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/textView4"
                style="@style/text_3_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:text="验证码"/>

            <EditText
                android:id="@+id/check_code_edit"
                style="@style/edit_c0_title_color_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/get_code_button"
                android:layout_toRightOf="@+id/textView4"
                android:hint="请输入验证码"/>

            <Button
                android:id="@+id/get_code_button"
                style="@style/text_red_14"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@color/white"
                android:gravity="center"
                android:padding="10dp"
                android:text="获取验证码"/>

            <View
                android:layout_width="0.5dp"
                android:layout_height="28dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/get_code_button"
                android:background="@color/gray_D8"/>

            <View
                style="@style/line_D8"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_password"
                style="@style/text_3_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="密\u3000码"/>

            <EditText
                android:id="@+id/et_password"
                style="@style/edit_c0_title_color_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:ems="10"
                android:hint="请输入密码"/>
        </LinearLayout>

        <View style="@style/line_D8"/>

        <Button
            android:id="@+id/regist_button"
            style="@style/text_f_16"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp"
            android:background="@drawable/circle4_red"
            android:text="注册"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/text_6_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="注册即表示您同意"/>

            <TextView
                android:id="@+id/textView_agree"
                style="@style/text_6_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《红了旅行用户协议》"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
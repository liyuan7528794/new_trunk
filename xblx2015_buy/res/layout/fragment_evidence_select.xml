<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

    <EditText
        android:id="@+id/tv_introduction"
        style="@style/text_3_15"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_margin="20dp"
        android:background="@drawable/transparent_point2_b2"
        android:gravity="top|left"
        android:hint="请简单解释此证据"
        android:padding="15dp"
        android:textColorHint="@color/gray_C0"/>

    <GridView
        android:id="@+id/gv_grid_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_complete"
        android:layout_below="@+id/tv_introduction"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:horizontalSpacing="20dp"
        android:listSelector="@android:color/transparent"
        android:numColumns="3"
        android:scrollbars="none"
        android:stretchMode="columnWidth"
        android:verticalSpacing="20dp"/>

    <Button
        android:id="@+id/tv_complete"
        style="@style/text_f_16"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="1dp"
        android:background="@color/black_3"
        android:gravity="center"
        android:text="完成"/>
</RelativeLayout>
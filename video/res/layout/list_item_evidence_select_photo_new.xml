<?xml version="1.0" encoding="utf-8"?>
<com.travel.widget.SquareFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                     xmlns:tools="http://schemas.android.com/tools"
                                     android:layout_width="match_parent"
                                     android:layout_height="match_parent"
                                     android:orientation="vertical"
                                     android:padding="1dp"
                                     tools:layout_height="120dp"
                                     tools:layout_width="120dp">

    <ImageView
        android:id="@+id/iv_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        tools:src="@android:color/holo_purple"/>

    <CheckBox
        android:id="@+id/cb_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:background="@drawable/check_box"
        android:button="@null"/>

    <TextView
        android:id="@+id/tv_time_long"
        style="@style/text_f_13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="13dp"
        android:visibility="gone"
        tools:text="11:06"
        tools:visibility="visible"/>

    <ProgressBar
        android:id="@+id/pb_upload"
        style="@style/pb_upload_file"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_gravity="bottom"
        tools:progress="50"
        tools:visibility="visible"/>
</com.travel.widget.SquareFrameLayout>
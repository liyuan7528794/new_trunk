<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/vote_media_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

    <com.tencent.av.opengl.ui.GLRootView
        android:id="@+id/gLRootView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/leftRe"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/left_close"
                android:layout_width="31dp"
                android:layout_height="31dp"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"
                android:src="@drawable/inser_cut_close"/>

            <ImageView
                android:id="@+id/left_change_camera"
                android:layout_width="31dp"
                android:layout_height="31dp"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@+id/left_close"
                android:src="@drawable/live_point_change_carame"/>

            <RelativeLayout
                android:id="@+id/leftCoverRe"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/blue_3023AE">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/leftCover"
                        android:layout_width="56dp"
                        android:layout_height="56dp"/>

                    <TextView
                        android:id="@+id/leftName"
                        style="@style/text_f_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        style="@style/text_f50_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="ing..."/>
                </LinearLayout>
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rightRe"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/right_close"
                android:layout_width="31dp"
                android:layout_height="31dp"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"
                android:src="@drawable/inser_cut_close"/>

            <ImageView
                android:id="@+id/right_change_camera"
                android:layout_width="31dp"
                android:layout_height="31dp"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@+id/right_close"
                android:src="@drawable/live_point_change_carame"/>

            <RelativeLayout
                android:id="@+id/rightCoverRe"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/red_FF2942">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/rightCover"
                        android:layout_width="56dp"
                        android:layout_height="56dp"/>

                    <TextView
                        android:id="@+id/rightName"
                        style="@style/text_f_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        style="@style/text_f50_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="ing..."/>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
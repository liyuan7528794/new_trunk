<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_contrainer"
    android:background="@color/gray_C0_alpha40">

    <LinearLayout
        android:id="@+id/ll_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/fl"
            android:layout_width="wrap_content"
            android:layout_height="165dp">

            <LinearLayout
                android:id="@+id/ll_menu"
                android:layout_width="wrap_content"
                android:layout_height="220dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/menu_voice"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_marginBottom="3dp"
                    android:src="@drawable/menu_voice" />

                <ImageView
                    android:id="@+id/menu_video"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_marginBottom="3dp"
                    android:src="@drawable/menu_video" />

                <ImageView
                    android:id="@+id/menu_photo"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_marginBottom="3dp"
                    android:src="@drawable/menu_photo" />

            </LinearLayout>
        </FrameLayout>

        <ImageView
            android:id="@+id/menu_close"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:src="@drawable/menu_close" />
    </LinearLayout>
</RelativeLayout>
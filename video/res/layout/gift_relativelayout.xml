<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/giftLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:id="@+id/animation1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/animation2"
            android:gravity="center_vertical">

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/animation2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/animation3"
            android:gravity="center_vertical">

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/animation3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical">

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true">

        <RelativeLayout
            android:id="@+id/hlUserLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="55dp"
            android:background="@drawable/gift_hl_user_background">

            <ImageView
                android:id="@+id/userImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3.5dp"/>

            <TextView
                android:id="@+id/userName"
                style="@style/text_f_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/userImage"
                android:layout_centerHorizontal="true"
                android:text="姓名"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/userName"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_f_11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="送出了"/>

                <TextView
                    android:id="@+id/giftName"
                    style="@style/text_yellow_F1E600_11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="红了象"/>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/hlAnimation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hlUserLayout"
            android:layout_marginTop="50dp">

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
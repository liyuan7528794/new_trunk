<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="309dp"
        android:layout_height="240dp"
        android:background="@drawable/circle4_f_point5_d8"
        android:orientation="vertical"
        android:paddingBottom="18dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="18dp">

        <TextView
            android:id="@+id/tv_out_vote_title"
            style="@style/text_3_18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"/>

        <TextView
            android:id="@+id/tv_out_vote_content"
            style="@style/text_9_13"
            tools:text="哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3.5dp"
            android:lineSpacingExtra="2dp"
            android:ellipsize="end"
            android:lines="2"/>

        <RelativeLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="279dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="12dp">

            <com.travel.layout.LadderRoundedImageView
                android:id="@+id/iv_left_cover"
                android:layout_width="144dp"
                android:layout_height="79dp"
                android:scaleType="centerCrop"
                app:corner="2"
                app:distanse="25dp"
                app:orientations="0"
                app:radius="5dp"/>

            <com.travel.layout.LadderRoundedImageView
                android:id="@+id/iv_right_cover"
                android:layout_width="145dp"
                android:layout_height="79dp"
                android:layout_alignParentRight="true"
                android:scaleType="centerCrop"
                app:corner="0"
                app:distanse="25dp"
                app:orientations="0"
                app:radius="5dp"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="279dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_left_name"
                style="@style/text_3_16"
                android:layout_width="154dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:lines="1"/>

            <TextView
                android:id="@+id/tv_right_name"
                style="@style/text_3_16"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="right"
                android:lines="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="279dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_num"
                style="@style/text_6_12"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="参与人数3人"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/tv_time"
                style="@style/text_6_12"
                android:layout_width="151dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="right"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

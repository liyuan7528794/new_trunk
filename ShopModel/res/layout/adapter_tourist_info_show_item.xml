<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:textColor="@color/black_6C6F73"
            android:textSize="12dp"
            tools:text="1"/>

        <TextView
            android:id="@+id/tv_tourist_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="9dp"
            android:layout_toRightOf="@+id/tv_number"
            android:textColor="@color/black_48494C"
            android:textSize="16dp"
            tools:text="好像君"/>

        <TextView
            android:id="@+id/tv_tourist_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_tourist_name"
            android:textColor="@color/black_48494C"
            android:textSize="16dp"
            tools:text="男"/>

        <TextView
            android:id="@+id/tv_tourist_ID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_tourist_name"
            android:layout_below="@+id/tv_tourist_name"
            android:layout_marginTop="5dp"
            android:textColor="@color/black_6C6F73"
            android:textSize="14dp"
            tools:text="身份证号：14787219881220876756"/>
    </RelativeLayout>

    <View
        android:id="@+id/v_line_tourist"
        style="@style/line_f8"></View>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/circle12_f"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_cancle_refuse"
            style="@style/text_3_17"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:gravity="center"/>

        <View style="@style/line_D8"/>

        <ListView
            android:id="@+id/lv_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/gray_D8"
            android:dividerHeight="0.5dp"
            android:listSelector="@android:color/transparent"
            android:scrollbars="none">
        </ListView>

        <View style="@style/line_D8"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cancle_cancle_order"
                style="@style/text_3_17"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ripple_drawable_bg_black"
                android:gravity="center"
                android:text="@string/cancle"/>

            <View style="@style/line_point5_m_d8"/>

            <TextView
                android:id="@+id/tv_sure_cancle_order"
                style="@style/text_3_17"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ripple_drawable_bg_black"
                android:gravity="center"
                android:text="@string/sure"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
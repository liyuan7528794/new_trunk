<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <EditText
        android:id="@+id/et_coupon_number"
        style="@style/activate_edit"
        android:layout_marginTop="71dp"
        android:hint="卡号"
        android:inputType="phone"/>

    <EditText
        android:id="@+id/et_coupon_password"
        style="@style/activate_edit"
        android:layout_marginTop="20dp"
        android:hint="密码"
        android:inputType="textPassword"/>

    <EditText
        android:id="@+id/et_coupon_phone"
        style="@style/activate_edit"
        android:layout_marginTop="20dp"
        android:hint="手机号"
        android:inputType="phone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_verification_code"
            style="@style/activate_edit"
            android:layout_width="0dp"
            android:layout_marginRight="13dp"
            android:layout_weight="20"
            android:hint="验证码"
            android:inputType="phone"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"/>

        <TextView
            android:id="@+id/tv_verification_code"
            style="@style/text_6_16"
            android:layout_width="0dp"
            android:layout_height="49dp"
            android:layout_weight="13"
            android:background="@drawable/circle5_f_point5_b2"
            android:gravity="center"
            android:text="获取验证码"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_activate"
        style="@style/text_f_16"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/circle5_d"
        android:gravity="center"
        android:text="激活"/>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_goodsinfo_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/tv_goodsinfo_title"
        style="@style/text_3_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tv_goodsinfo_subhead"
        style="@style/text_6_14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:gravity="center"/>

    <View
        style="@style/line_D8_margin15"
        android:layout_marginTop="38dp"></View>

</LinearLayout>

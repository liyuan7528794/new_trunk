<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/circle12_f"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_remain_time"
            style="@style/text_3_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:id="@+id/tv_travel_total"
            style="@style/text_3_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <TextView
                style="@style/text_3_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="退款："/>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_deduct_money"
                    style="@style/text_3_15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:digits="0123456789."
                    android:gravity="center"
                    android:inputType="number"
                    android:singleLine="true"/>

                <View style="@style/line_9"/>
            </LinearLayout>

            <TextView
                style="@style/text_3_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="元"/>
        </LinearLayout>

        <TextView
            style="@style/text_9_14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/orderinfo_deduct_money_explain"/>
    </LinearLayout>

    <View style="@style/line_9"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_sure_unsubscribe_cancle"
            style="@style/text_3_14"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ripple_drawable_bg_black"
            android:gravity="center"
            android:text="@string/cancle"/>

        <View style="@style/line_point5_m_d8"/>

        <TextView
            android:id="@+id/tv_sure_unsubscribe_sure"
            style="@style/text_3_14"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ripple_drawable_bg_black"
            android:gravity="center"
            android:text="@string/sure"/>
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp">

        <TextView
            android:id="@+id/tv_tourist_name_label"
            style="@style/text_3_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="旅客1"/>

        <TextView
            android:id="@+id/tv_tourist_name_content"
            style="@style/text_9_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="77dp"
            tools:text="好象君"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp">

        <TextView
            style="@style/text_3_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="性别"/>

        <TextView
            android:id="@+id/tv_tourist_sex_content"
            style="@style/text_9_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="77dp"
            tools:text="男"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp">

        <TextView
            style="@style/text_3_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号"/>

        <TextView
            android:id="@+id/tv_tourist_phone_content"
            style="@style/text_9_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="77dp"
            tools:text="1580009878"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="15dp">

        <TextView
            style="@style/text_3_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="身份证号"/>

        <TextView
            android:id="@+id/tv_tourist_id_content"
            style="@style/text_9_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="77dp"
            tools:text="108327187609097362"/>
    </RelativeLayout>

    <View
        android:id="@+id/v_line_tourist_show"
        style="@style/line_f8"
        android:layout_marginRight="31dp"></View>

</LinearLayout>